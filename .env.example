# Telegram Bot Token
TG_TOKEN=your_bot_token_here

# Bot API Key for communication between bot and backend
BOT_API_KEY=your_secret_key_here

# Google OAuth2 Settings
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# OIDC Settings (optional)
OIDC_ISSUER=https://accounts.google.com
OIDC_CLIENT_ID=your_oidc_client_id
OIDC_CLIENT_SECRET=your_oidc_client_secret
OIDC_REDIRECT_URL=http://localhost:8080/auth/oidc/callback

# Session Storage (optional, defaults to memory)
SESSION_REDIS=localhost:6379
SESSION_REDIS_PASS=
SESSION_REDIS_PREFIX=catwatch:

# Backend URLs for Bot
PUBLIC_API_URL=http://localhost:8080
AUTH_SUCCESS_REDIRECT=http://localhost:8080

# Logging
LOG_FORMAT=text
DEBUG=true
