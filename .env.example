# Server address (default: :8080)
# LISTEN=:8080

# Database DSN (default: catwatch.db)
# DB_PATH=catwatch.db

# Telegram Bot Token (Required for bot)
TG_TOKEN=your_bot_token_here

# Bot API Key (Must match on backend and bot)
BOT_API_KEY=your_secret_key_here

# JWT Secret (Required for production)
JWT_SECRET=your_jwt_secret_here

# CORS Origins (default: *)
# CORS_ORIGIN=http://localhost:3000

# Google OAuth2 Settings
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# OIDC Settings (optional)
# OIDC_ISSUER=https://accounts.google.com
# OIDC_CLIENT_ID=your_oidc_client_id
# OIDC_CLIENT_SECRET=your_oidc_client_secret
# OIDC_REDIRECT_URL=http://localhost:8080/auth/oidc/callback

# Session Storage (optional, defaults to memory)
# SESSION_REDIS=localhost:6379
# SESSION_REDIS_PASS=
# SESSION_REDIS_PREFIX=catwatch:oauth:

# Bot Settings
# API_URL=http://localhost:8080
PUBLIC_API_URL=http://localhost:8080
AUTH_SUCCESS_REDIRECT=http://localhost:8080

# Development Mode
# DEV_LOGIN=1

# JWT Settings
# AUTH_ACCESS_TTL=15m
# AUTH_REFRESH_TTL=720h

# GDPR & Audit
# AUDIT_LOG_TTL=720h

# Logging & Monitoring
LOG_FORMAT=text
DEBUG=true
# METRICS_ENDPOINT=/metrics
# HEALTHZ_ENDPOINT=/healthz
